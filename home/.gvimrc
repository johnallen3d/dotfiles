" Use 14pt Menlo
" set guifont=Menlo:h14
" set guifont=Inconsolata:h15
set guifont=Bitstream\ Vera\ Sans\ Mono\ for\ Powerline:h14

" Better line-height
" set linespace=8

" hides toolbar
set guioptions=egmrt

" use bash in mvim
set shell=bash

set transparency=1
" colorscheme made_of_code
" colorscheme monokai
colorscheme Tomorrow-Night

" hides scroll bars
set guioptions=aAce
