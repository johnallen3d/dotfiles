#! /usr/bin/env bash

#
# A ruby environment for building gems and other one-off tasks
#
# volume mounts in order:
#
# * local folder into working directory
docker run \
  -it \
  --rm \
  -w /usr/src/app \
  -v "$PWD":/usr/src/app \
  johnallen3d/ruby-dev:latest "${@}"


